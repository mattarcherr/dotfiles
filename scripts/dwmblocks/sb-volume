#!/bin/sh

muted=$(amixer get Master | tail -2 | grep -c '\[on\]')
case $muted in
        0) echo "ﱝ" && exit 1;
esac

volume=$(awk -F"[][]" '/Left:/ { print $2 }' <(amixer sget Master))
#if [[ -n "$volume" ]]; then
#        volume=$(awk -F"[][]" '/Mono:/ { print $2 }' <(amixer sget Master))
#fi

volume=${volume::-1}

case $volume in
        ([0-4][0-9]|50) echo " $volume%" ;;
        ([5-9][0-9]|100) echo " $volume%" ;;
        0) echo "󰝟";;
esac

case $BUTTON in
    1) st -e alsamixer ;;
esac
